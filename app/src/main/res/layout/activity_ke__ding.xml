<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wuxiaolong.androidmvpsample.ke.Ke_DingDanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#2b3139">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/ding_center_back"
            android:layout_marginLeft="50px"
            android:layout_width="17px"
            android:layout_height="31px"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="订单"
            android:textColor="#ffffff"
            android:textSize="36px" />
    </RelativeLayout>

    <Button
        android:id="@+id/ding_btn1"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="434px"
        android:background="@drawable/btn"
        android:text="客房预订"
        android:textColor="#ffffff"
        android:textSize="32px" />

    <Button
        android:id="@+id/ding_btn2"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:background="@drawable/btn"
        android:text="餐饮预定"
        android:textColor="#ffffff"
        android:textSize="32px" />

    <Button
        android:id="@+id/ding_btn3"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:background="@drawable/btn"
        android:text="温泉预订"
        android:textColor="#ffffff"
        android:textSize="32px" />
</com.zhy.autolayout.AutoLinearLayout>
