<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700px"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="690px"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="34px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:text="*消费类型："
                android:textColor="#494b4d"
                android:textSize="28px" />

            <com.weiwangcn.betterspinner.library.BetterSpinner
                android:id="@+id/can_spanner"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请选择"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/can_money_one"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:background="#ffffff"
                android:hint="请输入价格"
                android:textColor="#494b4d"
                android:textSize="28px" />
            <TextView
                android:textColor="#39424c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="28px"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="690px"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="34px"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/can_jianjian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/jian" />

        <EditText
            android:id="@+id/canrenshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:text="1"
            android:background="#ffffff"
            android:hint="人数"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/can_jiajia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20px"
            android:src="@mipmap/jia" />


    </LinearLayout>

    <TextView
        android:id="@+id/ssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="20px"
        android:hint="*消费时间"
        android:textSize="28px" />

    <EditText
        android:id="@+id/ccc_beizhu"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:background="#ffffff"
        android:hint="备注："
        android:textSize="28px" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:src="@mipmap/xinzeng" />




</com.zhy.autolayout.AutoLinearLayout>
