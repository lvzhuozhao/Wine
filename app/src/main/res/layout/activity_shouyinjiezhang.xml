<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wuxiaolong.androidmvpsample.ShouyinjiezhangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#2b3139">

        <ImageView
            android:id="@+id/jiezhnag_back"
            android:layout_width="17px"
            android:layout_height="31px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/shouyin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="客房收银"
            android:textColor="#ffffff"
            android:textSize="36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:background="#2b3139"
        android:orientation="vertical">
        <android.support.design.widget.TabLayout
            android:id="@+id/shouyin_tab_layou"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:tabIndicatorColor="#587DCC"
            app:tabSelectedTextColor="#587DCC"
            app:tabTextAppearance="@style/CustomTabLayoutTextAppearance"
            app:tabTextColor="#ffffff"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/shouyin_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
