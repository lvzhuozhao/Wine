<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.wuxiaolong.androidmvpsample.ke.Ke_xiadanActivity">

    <RelativeLayout
        android:id="@+id/real"
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#2b3139">

        <ImageView
            android:id="@+id/yu_center_back"
            android:layout_width="17px"
            android:layout_height="31px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="客房预订"
            android:textColor="#ffffff"
            android:textSize="36px" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/haha"
            android:layout_width="match_parent"
            android:layout_height="603px"
            android:background="#2b3139"
            android:orientation="vertical">

            <ImageView
                android:layout_width="594px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75px"
                android:src="@mipmap/yuding" />

            <RelativeLayout
                android:layout_width="600px"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75px">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26px"
                    android:text="预订"
                    android:textColor="#d6d6d6"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26px"
                    android:text="签到"
                    android:textColor="#d6d6d6"
                    android:textSize="35px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="26px"
                    android:text="收银"
                    android:textColor="#d6d6d6"
                    android:textSize="35px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="650px"
                android:layout_height="375px"
                android:layout_marginLeft="68px"
                android:layout_marginTop="60px"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/yu_name"
                        android:layout_width="300px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30px"
                        android:background="#ffffff"
                        android:hint="客户姓名"
                        android:maxLines="1"
                        android:textSize="28px" />

                    <EditText
                        android:id="@+id/yu_phone"
                        android:layout_width="300px"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:background="#ffffff"
                        android:hint="联系方式"
                        android:maxLines="1"
                        android:textSize="28px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <com.weiwangcn.betterspinner.library.BetterSpinner
                        android:id="@+id/yuding_xiala1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:hint="*客户来源"
                        android:textSize="28px" />

                    <com.weiwangcn.betterspinner.library.BetterSpinner
                        android:id="@+id/yuding_xiala2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20px"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:hint="*市场分类"
                        android:textSize="28px" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:hint="入住时间"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/yuding_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:text="2017-08-12"
                            android:textSize="28px" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:hint="离店时间"
                            android:textSize="28px" />

                        <TextView
                            android:id="@+id/yuding_date1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20px"
                            android:layout_weight="1"
                            android:background="#ffffff"
                            android:text="2017-8-16"
                            android:textSize="28px" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/yu_beizhu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="6"

                        android:background="#ffffff"
                        android:hint="请输入备注内容"
                        android:textSize="28px" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scro"
            android:layout_width="match_parent"
            android:layout_height="450px"
            android:layout_below="@id/haha">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/yinyong"
                    android:layout_width="650px"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="13dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="400px"
                        android:layout_height="80px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="*楼号选择:"
                            android:textColor="#494b4d"
                            android:textSize="28px" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/louhao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="6"
                            android:background="#ffffff"
                            android:hint="选择房型"
                            android:textSize="28px" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="400px"
                            android:layout_height="80px"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="*房间类型:"
                                android:textColor="#494b4d"
                                android:textSize="28px" />

                            <com.weiwangcn.betterspinner.library.BetterSpinner
                                android:id="@+id/yuding_xiala3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="6"
                                android:background="#ffffff"
                                android:hint="选择房型"
                                android:textSize="28px" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="80px"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/yu_money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20px"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:hint="请输入金额"
                                android:textColor="#494b4d"
                                android:textSize="28px" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:text="元"
                                android:textColor="#494b4d"
                                android:textSize="28px" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/yu_im_zeng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/jian" />

                        <EditText
                            android:id="@+id/yu_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20px"
                            android:background="#ffffff"
                            android:cursorVisible="false"
                            android:hint="房间数量"
                            android:maxLines="1"
                            android:text="1"
                            android:textSize="28px" />

                        <ImageView
                            android:id="@+id/yu_im_jian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20px"
                            android:src="@mipmap/jia" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="80px"
                        android:layout_marginTop="30px"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="*结算方式："
                            android:textColor="#494b4d"
                            android:textSize="28px" />

                        <com.weiwangcn.betterspinner.library.BetterSpinner
                            android:id="@+id/yuding_xiala4"
                            android:layout_width="200px"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#ffffff"
                            android:hint="选择方式"
                            android:textSize="28px" />


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/yu_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10px"
                        android:src="@mipmap/xinzeng" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <Button
            android:id="@+id/yu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/scro"
            android:background="#3d4878"
            android:text="确认下单"
            android:textColor="#ffffff"
            android:textSize="34px" />
    </RelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
