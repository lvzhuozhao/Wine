<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wuxiaolong.androidmvpsample.yuding.Yu_DingdanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#2b3139"
        android:layout_height="128px">
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/y_center_back"
            android:layout_marginLeft="50px"
            android:layout_width="17px"
            android:layout_height="31px"
            android:src="@mipmap/back"/>
        <TextView
            android:textColor="#ffffff"
            android:textSize="36px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人中心"/>
    </RelativeLayout>


    <Button
        android:id="@+id/y_center_btn1"
        android:layout_gravity="center"
        android:textSize="32px"
        android:textColor="#ffffff"
        android:background="@drawable/btn"
        android:layout_marginTop="434px"
        android:text="客房预订"
        android:layout_width="300px"
        android:layout_height="100px" />
    <Button
        android:id="@+id/ying_btn2"
        android:layout_gravity="center"
        android:textSize="32px"
        android:textColor="#ffffff"
        android:background="@drawable/btn"
        android:layout_marginTop="20px"
        android:text="餐饮预定"
        android:layout_width="300px"
        android:layout_height="100px" />
    <Button
        android:id="@+id/ying_btn3"
        android:layout_gravity="center"
        android:textSize="32px"
        android:textColor="#ffffff"
        android:background="@drawable/btn"
        android:layout_marginTop="20px"
        android:text="温泉预订"
        android:layout_width="300px"
        android:layout_height="100px" />
</com.zhy.autolayout.AutoLinearLayout>
