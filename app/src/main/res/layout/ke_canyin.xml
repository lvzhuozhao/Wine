<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="700px"
    android:id="@+id/cancan"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="690px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="34px"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="*餐桌类型："
            android:textColor="#494b4d"
            android:textSize="28px" />

        <com.weiwangcn.betterspinner.library.BetterSpinner
            android:textSize="28px"
            android:id="@+id/can_yuding_spanner3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="690px"
        android:layout_height="100px"
        android:layout_marginLeft="30px"
        android:layout_marginTop="34px"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/jianjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/jian" />

            <EditText
                android:background="#ffffff"
                android:id="@+id/canyin_canzhuoshuliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="1"
                android:layout_marginLeft="20px"
                android:hint="餐桌数量"
                android:textSize="28px" />

            <ImageView
                android:id="@+id/jiajia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:src="@mipmap/jia" />
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/jianjianjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/jian" />

            <EditText

                android:id="@+id/yuding_renshu"
                android:background="#ffffff"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="1"
                android:layout_marginLeft="20px"
                android:hint="用餐人数" />

            <ImageView
                android:id="@+id/jiajiajia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20px"
                android:src="@mipmap/jia" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/xiaofeishijian"
        android:textSize="28px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40px"
        android:layout_marginRight="30px"
        android:layout_marginTop="50px"
        android:hint="*消费时间" />

    <EditText
        android:id="@+id/beibei"
        android:textSize="28px"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:layout_marginTop="80px"
        android:hint="备注：" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:src="@mipmap/xinzeng" />



</com.zhy.autolayout.AutoLinearLayout>
