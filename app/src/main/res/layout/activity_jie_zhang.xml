<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.wuxiaolong.androidmvpsample.ke.Ke_JieZhangActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128px"
        android:background="#2b3139">

        <ImageView
            android:id="@+id/jiezhnag_back"
            android:layout_width="17px"
            android:layout_height="31px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50px"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/shouyin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="客房收银"
            android:textColor="#ffffff"
            android:textSize="36px" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800px"
        android:background="#2b3139"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/shouyin_tab_layou"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:layout_alignParentBottom="true"
            app:tabIndicatorColor="#587DCC"
            app:tabSelectedTextColor="#587DCC"
            app:tabTextAppearance="@style/CustomTabLayoutTextAppearance"
            app:tabTextColor="#ffffff"></android.support.design.widget.TabLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/shouyin_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50px"
        android:layout_marginTop="36px"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费信息："
            android:textColor="#587dcc"
            android:textSize="34px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="房间号："
                android:textSize="28px" />

            <TextView
                android:id="@+id/jiezhang_fanghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-----"
                android:textSize="28px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额："
                android:textSize="28px" />

            <EditText
                android:id="@+id/jiezhang_jine"
                android:layout_width="wrap_content"
                android:background="#ffffff"
                android:layout_height="wrap_content"
                android:textSize="28px" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jiezhang_btn"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#3d4878"
            android:text="结账"
            android:textColor="#ffffff"
            android:textSize="34px" />

        <Button
            android:id="@+id/jiezhang_btn1"
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#3d4878"
            android:text="结欠"
            android:textColor="#ffffff"
            android:textSize="34px" />


    </RelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
